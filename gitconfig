[init]
  templatedir     = ~/.git_template
[commit]
  template        = ~/.git_template/message
[remote "origin"]
  prune = true
  fetch = +refs/pull/*/head:refs/remotes/origin/pr/*
[status]
  showUntrackedFiles = all
