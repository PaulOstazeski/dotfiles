#!/bin/sh
case $(uname -s) in
  Linux) (iwconfig wlan0;cat /proc/net/wireless) | awk '/ESSID/ {split($NF,essid,"\"")} ENDFILE {split($3,strength,".")} END {print essid[2],strength[1]"%"}' ;;
  *) /System/Library/PrivateFrameworks/Apple80211.framework/Versions/Current/Resources/airport -I | awk '/ SSID/ {print $NF}' ;;
esac
